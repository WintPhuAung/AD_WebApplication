
@{
    ViewData["Title"] = "Home";
    var username = ViewData["username"];
}

<h1>Home</h1>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Close &times;
        </button>
        <form asp-controller="Requisition" asp-action="ViewRequisitions" method="POST" class="form-inline my-2 my-lg-0">
            <a><input type="submit" class="w3-bar-item w3-button" value="View Requisitions"/></a>
        </form>
        <form asp-controller="PurchaseOrder" asp-action="SelectSupplier" method="POST" class="form-inline my-2 my-lg-0">
            <a><input type="submit" class="w3-bar-item w3-button"value="Create Purchase Order" /></a>
        </form>
        <form asp-controller="StationeryStore" asp-action="ViewInventory" method="POST" class="form-inline my-2 my-lg-0">
            <a><input type="submit" class="w3-bar-item w3-button" value="Inventory" /></a>
        </form>
    </div>

    <div id="main">

        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h1>My Page</h1>
            </div>
        </div>


        <div class="w3-container">
            <p>"Welcome"+@username</p>
        </div>

    </div>

    <script>
function w3_open() {
  document.getElementById("main").style.marginLeft = "25%";
  document.getElementById("mySidebar").style.width = "25%";
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("openNav").style.display = 'none';
}
function w3_close() {
  document.getElementById("main").style.marginLeft = "0%";
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("openNav").style.display = "inline-block";
}
    </script>

</body>
</html>

