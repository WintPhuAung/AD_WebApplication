<form class="form-inline md-form mr-auto mb-4" action="">
    <input class="form-control mr-sm-2" type="text" placeholder="Search categories" aria-label="Search">
    <button class="btn btn-outline-warning btn-rounded btn-sm my-0" type="submit">Search</button>
</form>

<form asp-controller="Department" asp-action="Search" method="POST">
    <p>
        <input type="hidden" name="userid" value="@userid" />
        <input type="text" name="SearchString" placeholder="Search categories">
        <input type="submit" value="Search" />
    </p>
</form>

<form action="/action_page.php">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Please select categories
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

            @foreach (var x in categories)
            {
                <a class="dropdown-item" href="#">Action</a>
                @x.name
                <button> category</button>
            }

        </div>
    </div>
    <br>
</form>
<form asp-controller="Department" asp-action="ViewCart" method="POST">
    <input type="submit" value="View Cart">
</form>
<div align=center>
    <div style="width:320px; height:80px; overflow:auto;">
        <table cellspacing="0" cellpadding="1" border="1" width="300">
            @foreach (var i in lists)
            {
                <tr>
                    <td>@i.itemCode</td>
                    <td>@i.description</td>
                    <td><button onclick="addToCart('@i.Id','@i.itemCode')">Add to Cart</button></td>

                </tr>
            }
        </table>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title" id="myModalLabel">#Item Code Item Name</h4>
                <p id="myModalLabel"/>
            </div>
            <div class="modal-body">
                <form asp-controller="Department" asp-action="AddToCart" method="POST">
                    <label for="quantity">Quantity Needed:</label>
                    <input type="number" id="quantity" name="quantity" min="1" max="50">
                    <input type="hidden" id="itemId" name="itemId">

                    <input type="submit" value="ok">
                </form>
            </div>
        </div>
        </div>
</div>
