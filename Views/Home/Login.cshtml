@model Team7_StationeryStore.Models.Employee;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf=8">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <script src="https://use.fontawesome.com/973befe495.js"></script>
</head>

<body>
    <div class="homecontainer">
        <div class="logocontainer">
            <img src="~/lib/img/logo.jpg">
            <h1>Logic Stationery</h1>
            <p>Stationery Management and Requisition System</p>
        </div>
        <div class="logincontainer">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
            <table>
                <tr>
                    <td>
                        <h5>@Html.LabelFor(x => x.Email)</h5>
                        @Html.TextBoxFor(x => x.Email)
                    </td>
                    <td>@Html.ValidationMessageFor(x => x.Email, "", new { style = "color:red" })</td>
                </tr>
                <tr>
                    <td>
                        <h5>Password</h5>
                        <input type="password" name="password" />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><button>Login</button>
                    <td>
                </tr>
            </table>
    }
